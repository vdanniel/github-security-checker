{
  "name": "github-security-checker",
  "version": "0.1.0",
  "description": "GitHub repository security configuration checker and recommendation engine",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev:cli": "npm run dev --workspace=@ghsec/cli",
    "dev:web": "npm run dev --workspace=@ghsec/web",
    "dev:mcp": "npm run dev --workspace=@ghsec/mcp",
    "lint": "eslint packages/*/src",
    "test": "vitest"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "eslint": "^8.55.0"
  }
}
